{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "github-actions": {
    "managerFilePatterns": [
      "/^workflows/templates/.+\\.yml\\.tmpl$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^tools/.*/tool\\.go$/"
      ],
      "matchStrings": [
        "//\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s*\\n\\s*const\\s+version\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "versioningTemplate": "semver"
    }
  ]
}
